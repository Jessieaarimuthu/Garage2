@model IEnumerable<Garage2.Models.ParkedVehicle>

@{
    ViewData["Title"] = "ParkedVehicleViewIndex";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VehicleType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArrivalTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegistrationNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArrivalTime)
                </td>
                <td>
                    @Html.DisplayFor(model => item.RegistrationNumber)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.RegistrationNumber">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.RegistrationNumber">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.RegistrationNumber">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
